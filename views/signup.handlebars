<main class="container">
  <div class="card margIndex2">
    <div class="row">
      <div class="col s12">
        <div class="card cardCol darken-1 marg">
          <div class="card-content white-text">
            <div class="row">
              <form class="create col s12" id="signup">
                <div class="row">
                  <span class="card-title center">Sign Up</span>
                  <div class="input-field col s12 white-text">
                    {{!-- First Name --}}
                    <label for="InputFirstName">First name</label>
                    <input type="text" id="first-input" placeholder="First name">
                  </div>

                  {{!-- Last Name --}}
                  <div class="input-field col s12">
                    <div>
                      <label for="InputLastName">Last name</label>
                      <input type="text" id="last-input" placeholder="Last name">
                    </div>
                  </div>

                  {{!-- Email --}}
                  <div class="input-field col s12">
                    <div>
                      <label for="InputEmail1">Email address</label>
                      <input type="email" id="email-input" placeholder="Email">
                    </div>
                  </div>

                  {{!-- Password --}}
                  <div class="input-field col s12">
                    <div>
                      <label for="InputPassword1">Password</label>
                      <input type="password" id="password-input" placeholder="Password">
                    </div>
                  </div>
                  {{!-- Style --}}
                  <div style="display: none" id="alert" role="alert">
                    <span aria-hidden="true"></span>
                    <span>Error:</span> <span></span>
                  </div>

                  {{!-- Button --}}
                  <div class="center">
                    <button id="add-item" class="btn waves-effect waves-light" type="submit" name="action">Submit
                      <i class="material-icons right">login</i>
                    </button>
                  </div>
                </div>

              </form>
            </div>


          </div>
        </div>
      </div>
    </div>
  </div>



</main>

<script type="text/javascript" src="js/signup.js"></script>