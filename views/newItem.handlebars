<main class="container">
	<div class="card margIndex2">
		<div class="row">
			<div class="col s12">
				<div class="card cardCol darken-1">
					<div class="card-content white-text">
						<div class="row">
							<form class="create col s12">
								<div class="row">
									<span class="card-title">Sell Item</span>
									<div class="input-field">
										<label id="fontMatch" for="category">Product Category</label>
										<br>
										<br>
										<select id="dropdown" class="category validate white-text" id="category">
											<option value="" disabled selected>Choose your option</option>
											<option value="bikes"><a href="#">Bikes<span class="badge"></a></option>
											<option value="food"><a href="#!">Food<span></a></option>
											<option value="furniture"><a href="#">Furniture</a></option>
											<option value="household"><a href="#">Household</a></option>
											<option value="other"><a href="#">Other</a></option>
											<option value="schoolSupplies"><a href="#">School Supplies</a></option>
										</select>
									</div>
									<div class="input-field col s12">
										<input id="title" type="text" class="validate">
										<label for="title">Product Title</label>
									</div>
									<div class="input-field col s12">
										<input id="description" type="text" class="validate">
										<label for="description">Description</label>
									</div>
									<div class="input-field col s12">
										<input id="price" type="text" class="validate">
										<label for="price">Price</label>
									</div>
									<div class="input-field col s12">
										<input id="condition" type="text" class="validate">
										<label for="condition">Condition</label>
									</div>
									<div class="input-field col s12">
										<input id="link" type="text" class="validate">
										<label for="link">Image (Link)</label>
									</div>
							</form>
						</div>
						<div class="center">
							<button id="add-item" class="btn waves-effect waves-light" type="submit"
								name="action">Submit
								<i class="material-icons right">send</i>
							</button>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>



</main>

